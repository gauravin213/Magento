        			$imageUrl = $this->_storeManagerInterface->getStore()->getBaseUrl(\Magento\Framework\UrlInterface::URL_TYPE_MEDIA) . 'catalog/product' . $product->getImage();
        		} 
        		else 
        		{
        			$imageUrl = false;
        		}
            }
            ?> 

                    <tr>
                    	<td>
                        <?php if ($imageUrl) { ?>
